{
  "name": "boss-battle-music-bot",
  "private": true,
  "version": "1.0.0",
  "description": "A Discord bot that plays boss music",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.cjs",
    "build": "tsup src/index.ts --minify --external unfetch,ffmpeg-static",
    "docker-build": "docker build -t boss-battle-music-bot .",
    "docker-save": "docker save boss-battle-music-bot:latest -o music-discord-bot.tar",
    "build-prod": "npm run build && npm run docker-build && npm run docker-save"
  },
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "discord-player": "^7.1.0",
    "discord-player-soundcloud": "^1.0.7",
    "discord-player-spotify": "^1.1.7",
    "discord.js": "^14.22.1",
    "dotenv": "^16.0.3",
    "mediaplex": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
